<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".widgets.activity.SetUserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large"
            android:gravity="center"
            android:text="Profile Info"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/extreme_large_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large"
            android:gravity="center"
            android:text="please provide your name and an option profile image"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/medium_size" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/circular_image"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/extreme_large"
            android:src="@drawable/ic_place_holder" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/large"
            android:background="@drawable/bg_text_view"
            android:backgroundTint="@color/primary_text"
            android:ems="10"
            android:drawablePadding="8dp"
            android:inputType="textPersonName"
            android:lines="1"
            android:maxLength="15"
            android:hint="enter your good name"
            android:imeOptions="actionDone"
            android:includeFontPadding="false"
            android:padding="12dp"
            android:drawableStart="@drawable/ic_place_holder"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary_text"
            android:textSize="@dimen/large_size" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/extreme_large"
        android:background="@drawable/bg_button"
        android:text="@string/next"
        android:textAllCaps="false" />
</RelativeLayout>
</layout>